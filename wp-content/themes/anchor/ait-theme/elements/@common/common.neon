@display:
	label: Display
	type: on-off
	default: on
	basic: true

customClass:
	label: Custom Class
	type: code
	default: ''

title:
	label: Title
	type: text
	default: ''

description:
	label: Description
	type: textarea
	default: ''

headAlign:
	label: Alignment
	type: image-radio
	checked: align-center
	images:
		align-left: text-align-left.png
		align-center: text-align-center.png
		align-right: text-align-right.png
	default:
		align-left: Align to Left
		align-center: Align to Center
		align-right: Align to Right

- section(title: Element Background, advanced: true)

@bg:
	label: Background
	type: background
	default:
		color: ''
		opacity: 100%
		image: ''
		repeat: repeat
		position: top center
		scroll: scroll
	help: "Look of element background. Color, opacity and background image."

titlesAltColor:
	label: Titles Color
	type: color
	default: ''
	help: "Custom color of titles"

textAltColor:
	label: Text Color
	type: color
	default: ''
	help: "Custom color of text"

linkAltColor:
	label: Links Color
	type: color
	default: ''
	help: "Custom color of links"

- section(title: Spaces around Element, advanced: true)

margin-top:
	label: Top Margin
	type: number
	unit: px
	default: ''

padding-top:
	label: Top Padding
	type: number
	unit: px
	default: ''

padding-bottom:
	label: Bottom Padding
	type: number
	unit: px
	default: ''

margin-bottom:
	label: Bottom Margin
	type: number
	unit: px
	default: ''

